<header>
    <nav class="container">
        <div class="nav-logo">
            <a href="#" class="logo-link">
                <span class="logo-text">HSalud Pro</span>
            </a>
        </div>
        <div class="nav-links">
            <a href="#features">Características</a>
            <a href="#beneficios">Beneficios</a>
            <a href="#clientes">Clientes</a>
        </div>
        <div class="nav-cta">
            <a href="http://162.245.191.108/" target="_blank" class="button button-secondary">Probar Demo</a>
            <a href="#" data-open-contact class="button button-primary">Contactar Ventas</a>
        </div>
    </nav>
</header>


<style lang="scss">
nav{
    position: relative;
    display: flex;
    justify-content: space-between;
    align-items: center;
    top: 20px;
    padding: 0 20px;
    max-width: 1200px;
    margin: 0 auto;
    /* Una sola línea en desktop */
    flex-wrap: nowrap;
    gap: 12px;
    
    .nav-logo{
        flex: 0 0 auto;
        display: flex;
        align-items: center;
        gap: 8px;
    }
    
    .nav-links{
        flex: 1 1 auto;
        display: flex;
        justify-content: center;
        gap: 14px;
        margin: 0 12px;
        min-width: 0;
    }
    
    .nav-cta{
        flex: 0 0 auto;
        display: flex;
        gap: 10px;
        align-items: center;
        min-width: 0;
        
        .button{
            padding: 6px 12px;
            font-size: .6rem;
            height: 34px;
            line-height: 20px;
            min-width: auto;
        }
    }
    a:not(.button){
        padding: 8px 12px;
        color: var(--text-primary);
        text-decoration: none;
        font-weight: 500;
        font-size: 1.05rem;
        transition: color 0.3s ease;
        white-space: nowrap;
        
        &:hover{
            color: var(--primary);
        }
    }
    
    .logo-text{
        font-size: 2.0rem;
        font-weight: 700;
        text-decoration: none;
        white-space: nowrap;
        /* Subtle professional gradient text with gentle entrance */
        background: linear-gradient(90deg, var(--primary), var(--secondary));
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
        background-size: 200% 100%;
        background-position: 0% 50%;
        animation: logo-enter 600ms ease-out both;
        will-change: transform, opacity, background-position;
        transition: background-position .8s ease;
    }
    /* Hover gently shifts the gradient for a refined feel */
    .logo-link:hover .logo-text{ background-position: 100% 50%; }

    @keyframes logo-enter {
      from { opacity: 0; transform: translateY(6px); }
      to   { opacity: 1; transform: translateY(0); }
    }

    @media (prefers-reduced-motion: reduce) {
      .logo-text{ animation: none; transition: none; }
    }

    .chip{
        background: var(--light-bg);
        border: 1px solid rgba(0,0,0,0.06);
        color: var(--text-secondary);
        padding: 4px 8px;
        border-radius: 999px;
        font-size: .8rem;
        line-height: 1;
    }

    @media (max-width:900px) {
        flex-direction: column;
        gap: 15px;
        padding: 15px;
        .nav-logo .chip{ display: none; }
        
        .nav-links{
            display: none;
        }
        
        .nav-cta{
            flex-direction: row;
            gap: 10px;
            width: 100%;
            justify-content: center;
        }
        
        .nav-cta .button{
            width: auto;
            text-align: center;
        }
    }

    /* Pantallas medianas: mantener una sola línea con tamaños más pequeños */
    @media (min-width: 901px) and (max-width: 1199px) {
        flex-wrap: nowrap;
        .logo-text{ font-size: 2.4rem; }
        a:not(.button){ font-size: 1rem; }
        .nav-cta .button{ font-size: .9rem; height: 32px; }
    }
}

/* Contenedor centrado (sin full width) */
nav.container{ max-width: 1200px; margin: 0 auto; padding: 0 20px; }

/* Desktop enhancements */
@media (min-width: 1200px) {
  nav{
    .logo-text{ font-size: 2.8rem; }
    a:not(.button){ font-size: 1.15rem; }
  }
}


.pulse{
    animation: pulse 2s cubic-bezier(.4,0,.6,1) infinite;
}
@keyframes pulse {
   50% { opacity: .7; }
}

.tag{
    background-color: var(--secondary);
    color: var(--white);
    padding: 5px 10px;
    border-radius: 20px;
    font-size: 1.3rem;
    font-weight: 500;
}
</style>
