---
// Módulos principales de HSalud Pro (12)
const palette = ['primary','secondary','success','warning','info','danger']
const features = [
  {
    icon: '📊',
    title: 'Dashboard Principal',
    description: 'Métricas en tiempo real, ingresos y agenda del día/semana.',
  },
  {
    icon: '👥',
    title: 'Gestión de Pacientes',
    description: 'Perfiles con cédula, seguros, contactos y búsqueda avanzada.',
  },
  {
    icon: '📅',
    title: 'Sistema de Citas',
    description: 'Calendario día/semana/mes, estados y control de llegadas.',
  },
  {
    icon: '📋',
    title: 'Historia Clínica Digital',
    description: 'Consultas, diagnósticos, notas y archivos adjuntos por paciente.',
  },
  {
    icon: '💊',
    title: 'Recetario Digital',
    description: 'Prescripciones profesionales e impresión automática de recetas.',
  },
  {
    icon: '💰',
    title: 'Facturación Médica',
    description: 'Seguros dominicanos, estados de cobranza y múltiples pagos.',
  },
  {
    icon: '📈',
    title: 'Analíticas Médicas',
    description: 'Reportes y resultados de laboratorio, análisis y métricas.',
  },
  {
    icon: '📧',
    title: 'Comunicación',
    description: 'Emails automáticos, recordatorios de citas y plantillas.',
  },
  {
    icon: '⚙️',
    title: 'Configuración de Sistema',
    description: 'Ajustes por clínica, roles y personalización de servicios.',
  },
  {
    icon: '💉',
    title: 'Gestión de Medicamentos',
    description: 'Catálogo, dosis, presentaciones e inventario con alertas.',
  },
  {
    icon: '👤',
    title: 'Perfil de Usuario',
    description: 'Cuenta, preferencias, seguridad y registro de actividades.',
  },
  {
    icon: '📄',
    title: 'Reportes Médicos',
    description: 'Informes, exportación a Excel/PDF y tendencias.',
  },
].map((f, i) => ({ ...f, color: palette[i % palette.length] }));
---



<section class="features-section" id="features">
    <div class="container">
        <div class="section-header">
            <h2 class="section-title">🏥 Módulos Principales de HSalud Pro</h2>
            <p class="section-subtitle">Sistema médico completo con 12 módulos integrados funcionando en producción</p>
        </div>
        
        <div class="features-grid">
            {features.map((feature, index) => (
              <div class="feature-card feature-card-{feature.color}">
                <div class="feature-header">
                  <div class="feature-icon feature-icon-{feature.color}" aria-hidden="true">{feature.icon}</div>
                  <div class="feature-number" aria-label={`Módulo número ${index + 1}`}>#{index + 1}</div>
                </div>
                <h3 class="feature-title">{feature.title}</h3>
                <p class="feature-description">{feature.description}</p>
                <div class="feature-accent"></div>
              </div>
            ))}
        </div>
    </div>
</section>


<style lang="scss">
    .features-section{
        padding: var(--section-pad-y) 0;
        background: var(--white);
        
        .container{
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }
        
        .section-header{
            text-align: center;
            margin-bottom: 40px;
            
            .section-title{
                font-size: 3rem;
                font-weight: 700;
                color: var(--text-primary);
                margin-bottom: 20px;
            }
            
            .section-subtitle{
                font-size: 1.3rem;
                color: var(--text-secondary);
                max-width: 800px;
                margin: 0 auto;
            }
        }
        
        .features-grid{
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 20px;
            margin-bottom: 40px;
        }
        
        .feature-card{
            background: var(--white);
            padding: 22px 20px;
            border-radius: 12px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.06);
            border: 1px solid rgba(0,0,0,0.06);
            transition: all 0.25s ease;
            position: relative;
            overflow: hidden;
            
            &::before{
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                height: 2px;
                background: linear-gradient(90deg, var(--primary), var(--secondary));
            }
            
            &:hover{
                transform: translateY(-4px);
                box-shadow: 0 16px 36px rgba(0, 0, 0, 0.10);
                border-color: var(--primary);
            }
        }
        
        .feature-header{
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 25px;
        }
        
        .feature-icon{
            font-size: 2rem;
            width: 56px;
            height: 56px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 12px;
            margin: 0;
            
            &.feature-icon-primary{
                background: linear-gradient(135deg, var(--primary), #2C5D56);
                color: var(--white);
            }
            
            &.feature-icon-secondary{
                background: linear-gradient(135deg, var(--secondary), #4A7BC4);
                color: var(--white);
            }
            
            &.feature-icon-success{
                background: linear-gradient(135deg, var(--success), #1e7e34);
                color: var(--white);
            }
            
            &.feature-icon-warning{
                background: linear-gradient(135deg, var(--warning), #e0a800);
                color: var(--white);
            }
            
            &.feature-icon-info{
                background: linear-gradient(135deg, #17a2b8, #138496);
                color: var(--white);
            }
            
            &.feature-icon-danger{
                background: linear-gradient(135deg, var(--danger), #c82333);
                color: var(--white);
            }
        }
        
        .feature-number{
            background: var(--primary);
            color: var(--white);
            width: 32px;
            height: 32px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 700;
            font-size: .95rem;
        }
        
        .feature-title{
            color: var(--text-primary);
            font-size: 1.25rem;
            font-weight: 700;
            margin-bottom: 8px;
            line-height: 1.25;
        }
        
        .feature-description{
            color: var(--text-secondary);
            font-size: .95rem;
            line-height: 1.5;
            margin-bottom: 0;
        }
        
        .feature-accent{
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            height: 3px;
            background: linear-gradient(90deg, var(--primary), var(--secondary));
            transform: scaleX(0);
            transition: transform 0.3s ease;
        }
        
        .feature-card:hover .feature-accent{
            transform: scaleX(1);
        }
    }
    
    @media (max-width: 1200px) {
        .features-section{
            .features-grid{
                grid-template-columns: repeat(2, 1fr);
                gap: 16px;
            }
        }
    }
    
    @media (max-width: 700px) {
        .features-section{
            padding: var(--section-pad-y) 0;
            
            .container{
                padding: 0 20px;
            }
            
            .section-header{
                margin-bottom: 50px;
                
                .section-title{
                    font-size: 2.2rem;
                }
                
                .section-subtitle{
                    font-size: 1.1rem;
                }
            }
            
            .features-grid{ grid-template-columns: 1fr; gap: 12px; }
            
            .feature-card{ padding: 16px 14px; }
            
            .feature-title{
                font-size: 1.2rem;
            }
            
            .feature-description{
                font-size: .95rem;
            }
        }
    }
</style>
